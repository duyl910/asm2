
<table class="table table-primary text-center bg-light mt-3 mb-3 col-md-8">
   <tr>
      <th class="h1 text text-danger" colspan="6">Toys List ({{ total }})</th>
      <th>
         <a class="btn btn-success" href="/toy/add">Add</a>
         <a class="btn btn-danger" href="/toy/drop"
         onclick="return confirm('Are you sure to delete all Toys ?');"
         >Drop</a>
      </th>
   </tr>
   <tr>
            <th colspan="4">
                <form action="/toy/search" method="post">
                <input class="form-control" type="search" name="keyword" placeholder="Enter a Search title">
                </form>
            </th>
            <th colspan="3">
                <a class="btn btn-primary" href="/toy/ascending">Sort by Quantity Ascending</a>
                <a class="btn btn-success" href="/toy/descending">Sort by Quantity Descending</a>
            </th>
        </tr>
   <tr class="cot">
      <th>Name</th>
      <th>Type</th>
      <th>Brand</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Image</th>
      <th style="color:brown">Menu</th>
   </tr>
   {{#each toys }}
   <tr>
      <th>{{ name }}</th>
      <th>{{ type }}</th>
      <th>{{ brand }}</th>
      <th>{{ quantity }}</th>
      <th>${{ price }}</th>
      <th>
         <img  src="{{ image }}" width="200" height="200">
      </th>
      <th>
         <a class="btn btn-warning" href="/toy/edit/{{_id}}">Edit</a>
         <a class="btn btn-danger" href="/toy/delete/{{_id}}" 
         onclick="return confirm('Are you sure to delete this mobile ?');"
         >Delete</a>
      </th>
   </tr>
   {{/each}}
</table>